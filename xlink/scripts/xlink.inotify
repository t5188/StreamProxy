#!/system/bin/sh
cd ${0%/*} # current working directory
events=$1
monitor_file=$3

if [[ "${monitor_file}" == "disable" ]]; then
  case "${events}" in
  "d")
    $(pwd)/xlink.service enable >/dev/null 2>&1
    ;;
  "n")
    $(pwd)/xlink.service disable >/dev/null 2>&1
    ;;
  esac
fi

